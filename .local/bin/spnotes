#!/usr/bin/env sh

# Command for notes scratchpad used in dwm
selection=$(fd --color=always                   \
  --base-directory ~/notes                      \
  -e md -e txt -e qalc                          \
  | fzf                                         \
    --ansi                                      \
    --prompt="Notes ÔÑÅ "                         \
    --margin="10%,5%"                           \
    --no-info --height=100% --scrollbar=""      \
    --preview="glow ~/notes/{}"                 \
    --preview-window="border-left")

[ -n "$selection" ] && nvim ~/notes/"$selection"
